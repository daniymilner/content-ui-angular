mat-card
  width 200px
  height 260px
  margin 10px
  outline none
  position relative
  padding 0
  mat-card-header
    height 45px
    padding 11px 10px 8px 16px
    font-size 12px
    .mat-card-header-text
      margin: 0
    mat-card-title
      margin 0
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
    mat-card-subtitle
      margin 0
  mat-card-content
    padding 0
    outline none
    margin: 0
    img
      width 200px
      height 150px
      cursor pointer
      margin: 0
      padding: 0
  mat-card-actions
    height 46px
    margin: 0
    padding: 0